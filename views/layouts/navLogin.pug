if user
  ul.nav.navbar-nav
    li
      p.navbar-text
        strong Hi,
        img(src="#{user.avatar}" width="20" height="20")
        #{user.username}
      
      ul.nav.navbar-nav.navbar-right
        li
          a(href="/logout") Log Out
else
  ul.nav.navbar-nav.navbar-right
    li
      a( href="/local-reg") Sign Up
  form.navbar-form.navbar-right(action="/login" method="post")
    .form-group
      input.form-control(type='text', name='username', placeholder='Email')
    .form-group
      input.form-control(type='password', name='password', placeholder='Password')
      
    button.btn.btn-success(type='submit') Sign in